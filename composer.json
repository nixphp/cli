{
  "name": "nixphp/cli",
  "description": "NixPHP CLI Plugin for console applications.",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "nixphp-plugin",
  "authors": [
    {
      "name": "Flo Knapp",
      "email": "office@florianknapp.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "NixPHP\\Cli\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "../nixphp"
    }
  ],
  "require": {
    "php": ">=8.3",
    "ext-readline": "*",
    "nixphp/framework": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1",
    "phpunit/php-code-coverage": "^12.1"
  },
  "scripts": {
    "test": "phpunit --colors=always"
  },
  "bin": [
    "bin/nix"
  ]
}
